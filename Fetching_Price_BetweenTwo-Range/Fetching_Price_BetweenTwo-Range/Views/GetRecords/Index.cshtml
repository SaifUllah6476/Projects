@model IEnumerable<Fetching_Price_BetweenTwo_Range.Models.tbl_product>

@{
    ViewBag.Title = "Index";
}
</h2>
<br />
<br />
<br />
<h2 style="text-align:center; color:rebeccapurple">FETCHING PRICE BETWEEN TWO RANGE</h2>
<br />
<br />
<br />



<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pro_Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pro_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pro_Descripton)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pro_Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Descripton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro_Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.pro_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.pro_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.pro_id })
            </td>
        </tr>
    }

</table>
<br />
<br />
<br />

@using (Html.BeginForm("Index", "GetRecords", FormMethod.Post))
{
    <span style="text-align:center; color:rebeccapurple">Start Range:</span>
    <input type="number" name="start" />
    <span style="text-align:center; color:rebeccapurple">End Range:</span>
    <input type="number" name="end" />
    <input class="btn btn-danger" type="submit" name="Get Records" />
}
